<?php

class Mailer {

    private $to, $subject, $message, $from, $replyTo, $headers, $headersList;

    private __construct() { 
        $this->to      = 'mosadoluwa.adekunle@yahoo.com';
        $this->subject = 'the subject';
        $this->message = 'hello';
        $this->headers = 'From: mosa.adekunle@gmail.com' . "\r\n" .
            'Reply-To: mosa.adekunle@gmail.com' . "\r\n" .
            'X-Mailer: PHP/' . phpversion();
    }

    public function AddHeaders()
    {
        mail($this->to, $this->subject, $this->message, $this->headers);
    }


    public function SendMail()
    {
        mail($this->to, $this->subject, $this->message, $this->headers);
    }

    public function To($content)
    {
        $this->to = $content;
    }

    public function Subject($content)
    {
        $this->subject = $content;
    }

    public function Message($content)
    {
        $this->message = $content;
    }

    public function From($content)
    {
        $this->from = $content;
    }

    public function ReplyTo($content)
    {
        $this->replyTo = $content;
    }

}
